{
    "name": ".NET Core Xunit tests",
    "type": "coreclr",
    "request": "launch",
    "preLaunchTask": "build",
    "program": "/usr/local/share/dotnet/dotnet",
    "args": ["test"],
    "cwd": "${workspaceRoot}/test/MyProject.Tests",
    "externalConsole": false,
    "stopAtEntry": false,
    "internalConsoleOptions": "openOnSessionStart"
  }